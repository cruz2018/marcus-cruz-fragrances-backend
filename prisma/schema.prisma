generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  CANCELLED
}

enum NoteType {
  TOP
  HEART
  BASE
}

model User {
  id           String      @id @default(cuid())
  email        String      @unique
  passwordHash String
  firstName    String?
  lastName     String?
  role         Role        @default(USER)
  isActive     Boolean     @default(true)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  orders       Order[]
}

model Collection {
  id          String      @id @default(cuid())
  name        String
  slug        String      @unique
  description String?
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  fragrances  Fragrance[]

  @@index([isActive])
}

model Note {
  id        String      @id @default(cuid())
  name      String
  slug      String      @unique
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  fragrances FragranceNote[]
}

model Fragrance {
  id            String           @id @default(cuid())
  name          String
  slug          String           @unique
  description   String?
  priceCents    Int
  currency      String           @default("USD")
  sizeMl        Int
  concentration String
  isActive      Boolean          @default(true)
  isFeatured    Boolean          @default(false)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  collectionId  String?
  collection    Collection?      @relation(fields: [collectionId], references: [id])
  notes         FragranceNote[]
  orderItems    OrderItem[]

  @@index([isActive])
  @@index([isFeatured])
  @@index([collectionId])
  @@index([priceCents])
  @@index([concentration])
  @@index([createdAt])
}

model FragranceNote {
  id          String    @id @default(cuid())
  fragranceId String
  noteId      String
  type        NoteType
  fragrance   Fragrance @relation(fields: [fragranceId], references: [id])
  note        Note      @relation(fields: [noteId], references: [id])

  @@unique([fragranceId, noteId, type])
  @@index([noteId])
}

model Order {
  id          String       @id @default(cuid())
  userId      String
  status      OrderStatus  @default(PENDING)
  totalCents  Int
  currency    String       @default("USD")
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  user        User         @relation(fields: [userId], references: [id])
  items       OrderItem[]
  notes       String?

  @@index([userId])
  @@index([status])
}

model OrderItem {
  id           String     @id @default(cuid())
  orderId      String
  fragranceId  String
  quantity     Int
  unitPriceCents Int
  order        Order      @relation(fields: [orderId], references: [id])
  fragrance    Fragrance  @relation(fields: [fragranceId], references: [id])

  @@index([orderId])
  @@index([fragranceId])
}
